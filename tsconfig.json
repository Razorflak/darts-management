{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "baseUrl": "./src/",
    "incremental": true,
    "paths": {
      "@error/*": ["error/*"],
      "@apiRoutes/*": ["api/*"],
      "@config/*": ["config/*"],
      "@loaders/*": ["loaders/*"],
      "@entity/*": ["entity/*"],
      "@interface/*": ["shared/interfaces/*"]
    }
  },
  "exclude": ["node_modules", "dist", "src/client"]
}
